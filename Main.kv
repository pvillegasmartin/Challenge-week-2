        background_color: 0, 0.5, 0.5, 0.2
        pos_hint: {"center_x": 0.43, "center_y": 0.07}
        size_hint : (.1, .05)
        on_press: app.root.current = 'menu_screen'

<ProfileScreen>:

    name: 'profile_screen'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            source:'soft_color.png'
            size: root.width, root.height
            pos: self.pos

    Image:
        id: pie_chart
        source: root.image_path
        size_hint : (.75, .7)
        pos_hint : {"center_x": 0.5, 'center_y':.4}

    Label:
        id: user_name
        pos_hint : {"center_x": 0.5, 'center_y':.90}
        font_size: root.width/17
        color: 123, 227, 111, 100
        text: (root.name_user).upper()

    Label:
        id: label_progress
        pos_hint : {"x": 0.025, 'center_y':.8}
        font_size: 16
        size_hint : (.15, .05)
        color: 123, 227, 111, 100
        text: "Today's progress:"
    ProgressBar:
        id: progress_bar
        pos_hint : {"x": 0.25, 'center_y':.795}
        size_hint : (.3, .05)
        background_color: 0.5,0.5,0.5,1
        color: 0.5,0.5,0.5,1
        value: root.my_progress
        min: 0
        max: 100

    Label:
        id: bmi
        pos_hint : {"x": 0.025, 'center_y':.75}
        font_size: 16
        size_hint : (.1, .05)
        color: 123, 227, 111, 100

    Button:
        text: "Refresh"
        background_color: 2,1,1,1
        pos_hint : {"center_x": 0.925, 'center_y':.95}
        size_hint : (.1, .05)
        on_press: root.ids.pie_chart.source = root.refresh_data()[0]
        on_press: root.ids.bmi.text = 'BMI: ' + str(root.refresh_data()[1])

        on_press: if root.my_progress<30: root.ids.progress_bar.color = utils.get_color_from_hex('#e35744')
        on_press: if (root.my_progress>=30 and root.my_progress<=65): root.ids.progress_bar.color = utils.get_color_from_hex('#e3d344')
        on_press: if (root.my_progress>65 and root.my_progress<=100): root.ids.progress_bar.color = utils.get_color_from_hex('#6ab562')

        on_release: root.ids.progress_bar.value=root.my_progress

    Button:
        text: "Log out"
        background_color: 0, 0.5, 0.5, 0.2
        pos_hint : {"center_x": 0.925, 'center_y':.875}
        size_hint : (.1, .05)
        on_press: app.root.current = 'menu_screen'
